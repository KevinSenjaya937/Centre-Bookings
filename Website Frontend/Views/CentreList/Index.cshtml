@{
    @using Website_Frontend.Models;
    @model IEnumerable<Centre>;

}

<div id="tableview">
    <table>
        @foreach (var centre in Model)
        {
            <tr>
                <td>@centre.Id</td>
                <td>@centre.Name</td>
            </tr> 
        }

    </table>
</div>



<script>

    function getLoginStatus() {
        let centreListBtn = document.getElementById('adminCentreListBtn');
        let addCentreBtn = document.getElementById('addCentreBtn');

        $.ajax({
            type: 'get',
            url: '/adminlogin/getloginstatus/',
            contentType: 'application/json',
            processData: false,
            success: function(data, textStatus, jQxhr) {
                centreListBtn.type = "button";
                addCentreBtn.type = "button";
            },
            error: function(jqXhr, textStatus, errorThrown) {
                centreListBtn.type = "hidden";
                addCentreBtn.type = "hidden";
            }
        });
    }
    

</script>
